<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wcs.blablabof.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/buttonSearchItinerary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_new_itinerary"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="162dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <Button
        android:id="@+id/buttonCreateItinerary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/propose_new_itinerary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSearchItinerary"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.265"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
</android.support.constraint.ConstraintLayout>
