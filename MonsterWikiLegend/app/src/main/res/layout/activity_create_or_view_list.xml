<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_or_view_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="monster.fr.wcs.monsterwikilegend.CreateOrViewList">

    <ImageButton android:id="@+id/buttonList"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:padding="100dip"
        android:src="@drawable/oeuf_inconnu"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_alignTop="@+id/buttonCreate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/create_start"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_width="75dip"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/buttonCreate"
        android:layout_alignLeft="@+id/buttonCreate"
        android:layout_alignStart="@+id/buttonCreate" />

    <TextView
        android:text="@string/go_list"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_width="75dip"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/buttonList"
        android:layout_alignStart="@+id/buttonList" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/entete"
        android:id="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <ImageButton android:id="@+id/buttonCreate"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:padding="100dip"
        android:src="@drawable/oeuf_inconnu"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp" />


</RelativeLayout>
